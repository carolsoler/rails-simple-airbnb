<h1>Simple Airbnb</h1>
<div class="container">
  <div class="cards d-flex m-4 p-2">
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"> <%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.description %></h6>
          <div class="icons d-flex">
          <p class="card-text ml-2"><i class='fas fa-user-friends'></h6>
          <p class="card-text mr-2"></i><%= flat.number_of_guests %></h6>
          <p class="card-text ml-2"><i class='fas fa-euro-sign'></h6>
            <p class="card-text mr-2"></i><%= flat.price_per_night %></h6>
          </div>
          <a href="#" class="card-link">More info</a>
        </div>
      </div>
    <% end %>
    </div>
</div>
